<%= form_for @cart do |f| %>
	<%= render 'shared/errors', object: @cart %>
	<%= f.label			:name %>
	<%= f.text_field	:name %>
	<%= f.label			:description %>
	<%= f.text_area		:description %>
	<%= f.label			:location %>
	<%= f.text_field	:location %>
	<%= f.label			:phone %>
	<%= f.text_field	:phone %>
	<%= f.label			:website %>
	<%= f.text_field	:website %>
	<%= f.label			:twitter %>
	<%= f.text_field	:twitter %>
	<%= f.label			:facebook %>
	<%= f.text_field	:facebook %>

	<%= f.label			:cart_picture %>
	<%= f.file_field	:cart_picture %>

	<%= f.submit class: "button" %>
<% end %>